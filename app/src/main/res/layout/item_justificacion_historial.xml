<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/dividerColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con motivo y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvMotivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Motivo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_estado_pendiente"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Descripci贸n -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripci贸n de la justificaci贸n"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Fecha a justificar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFechaJustificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 2025-11-19"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Fecha de creaci贸n -->
        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitado: 2025-11-19"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Documento adjunto -->
        <TextView
            android:id="@+id/tvDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Documento adjunto"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
