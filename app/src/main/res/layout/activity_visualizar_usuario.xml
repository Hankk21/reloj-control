<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Información del Usuario"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:menu="@menu/visualizar_usuario_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Información básica del usuario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con avatar y nombre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_person"
                            android:background="@drawable/bg_avatar"
                            android:layout_marginEnd="20dp"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_nombre_completo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Juan Carlos Pérez González"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_rol_badge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Empleado"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:background="@drawable/badge_rol_empleado"
                                    android:paddingHorizontal="12dp"/>

                                <TextView
                                    android:id="@+id/tv_estado_badge"
                                    android:layout_width="39dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/badge_estado_activo"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="4dp"
                                    android:text="Activo"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/tv_fecha_registro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registrado: 15/08/2025"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_ultimo_acceso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Último acceso: 18/09/2025"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Información detallada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <!-- RUT -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:padding="8dp"
                            android:background="@drawable/bg_info_item">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_badge"
                                android:layout_marginEnd="12dp"
                                app:tint="@color/primary_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RUT"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tv_rut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.345.678-9"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_copy_rut"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_copy"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                app:tint="@color/text_secondary" />

                        </LinearLayout>

                        <!-- Correo -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:background="@drawable/bg_info_item">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_email"
                                android:layout_marginEnd="12dp" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Correo electrónico"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tv_correo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="juan.perez@empresa.com"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_copy_email"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_copy"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                app:tint="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botones de acción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_editar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="Editar"
                            android:textSize="12sp"
                            app:backgroundTint="@color/primary_color"
                            app:cornerRadius="6dp"
                            app:icon="@drawable/ic_edit"
                            app:iconSize="18dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_resetear_password"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="3dp"
                            android:text="Reset Pass"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/warning_color"
                            app:cornerRadius="6dp"
                            app:icon="@drawable/ic_key"
                            app:iconSize="18dp"
                            app:iconTint="@color/warning_color" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_eliminar"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="Eliminar"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/error_color"
                            app:cornerRadius="6dp"
                            app:icon="@drawable/ic_delete"
                            app:iconSize="18dp"
                            app:iconTint="@color/error_color" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Historial de asistencia (últimos 30 días) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Historial de Asistencia (últimos 30 días)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_ver_historial_completo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todo >"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Estadísticas de asistencia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginEnd="3dp">

                            <TextView
                                android:id="@+id/tv_dias_presente"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Presentes"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginHorizontal="1.5dp">

                            <TextView
                                android:id="@+id/tv_dias_ausente"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ausentes"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginHorizontal="1.5dp">

                            <TextView
                                android:id="@+id/tv_atrasos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/error_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Atrasos"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginStart="3dp">

                            <TextView
                                android:id="@+id/tv_porcentaje_asistencia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="88%"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asistencia"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Lista resumida de asistencia reciente -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registros recientes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_historial_asistencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:nestedScrollingEnabled="false" />

                    <!-- Mensaje cuando no hay historial -->
                    <TextView
                        android:id="@+id/tv_no_historial_asistencia"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="No hay registros de asistencia disponibles"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone"
                        android:drawableTop="@drawable/ic_event_busy"
                        android:drawablePadding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Historial de justificaciones y licencias -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Justificaciones y Licencias"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_ver_justificaciones_completo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todas >"
                            android:textSize="12sp"
                            android:textColor="@color/primary_color"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Resumen por estados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:id="@+id/tv_justificaciones_pendientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/pendiente_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pendientes"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginHorizontal="2dp">

                            <TextView
                                android:id="@+id/tv_justificaciones_aceptadas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/aceptado_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aceptadas"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginStart="4dp">

                            <TextView
                                android:id="@+id/tv_justificaciones_rechazadas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/rechazado_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rechazadas"
                                android:textSize="10sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Lista resumida de justificaciones recientes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solicitudes recientes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_historial_justificaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:nestedScrollingEnabled="false" />

                    <!-- Mensaje cuando no hay justificaciones -->
                    <TextView
                        android:id="@+id/tv_no_justificaciones"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="No hay justificaciones registradas"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone"
                        android:drawableTop="@drawable/ic_assignment"
                        android:drawablePadding="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>