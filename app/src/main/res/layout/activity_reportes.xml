<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Reportes de Asistencia"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:menu="@menu/reportes_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Filtros iniciales -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configurar Filtros"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Rango de fechas -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Período de tiempo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_rango_fechas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/primary_color"
                        app:hintTextColor="@color/primary_color">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_rango_fechas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar período"
                            android:inputType="none"
                            android:text="Esta semana"
                            android:drawableStart="@drawable/ic_calendar_range"
                            android:drawablePadding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Fechas personalizadas (ocultas por defecto) -->
                    <LinearLayout
                        android:id="@+id/layout_fechas_personalizadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_fecha_desde"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxStrokeColor="@color/primary_color"
                            app:hintTextColor="@color/primary_color">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_fecha_desde"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha desde"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_calendar" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_fecha_hasta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:boxStrokeColor="@color/primary_color"
                            app:hintTextColor="@color/primary_color">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_fecha_hasta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha hasta"
                                android:inputType="none"
                                android:focusable="false"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_calendar" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Filtro de usuario -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuario"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/primary_color"
                        app:hintTextColor="@color/primary_color">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_usuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seleccionar usuario"
                            android:inputType="none"
                            android:text="Todos los usuarios"
                            android:drawableStart="@drawable/ic_person"
                            android:drawablePadding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón aplicar filtros -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_aplicar_filtros"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Aplicar Filtros"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary_color"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_filter_alt"
                        app:iconGravity="textStart" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Opciones de reportes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipos de Reportes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Asistencia semanal -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_reporte_asistencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_pie_chart"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/primary_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="% Asistencia del Período"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Porcentaje de asistencia por usuario o global"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/text_secondary" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Top atrasos -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_reporte_atrasos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_trending_up"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/warning_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Top 5 Usuarios con Más Atrasos"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ranking de usuarios con mayor cantidad de atrasos"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/text_secondary" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Ausencias -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_reporte_ausencias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_list_alt"
                                android:layout_marginEnd="16dp"
                                app:tint="@color/error_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ausencias Justificadas/No Justificadas"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Listado detallado de todas las ausencias"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/text_secondary" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Vista previa del reporte seleccionado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vista_previa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_titulo_vista_previa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vista Previa del Reporte"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:id="@+id/iv_refresh_preview"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_refresh"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            app:tint="@color/primary_color" />

                    </LinearLayout>

                    <!-- Área del gráfico -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_chart_placeholder">

                        <!-- Placeholder para gráfico -->
                        <LinearLayout
                            android:id="@+id/layout_chart_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_bar_chart"
                                android:layout_marginBottom="16dp"
                                app:tint="@color/text_hint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selecciona un tipo de reporte\npara ver la vista previa"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center"
                                android:layout_marginBottom="12dp" />

                        </LinearLayout>

                        <!-- Aquí se cargarían los gráficos reales -->
                        <View
                            android:id="@+id/chart_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </FrameLayout>

                    <!-- Resumen de datos -->
                    <LinearLayout
                        android:id="@+id/layout_resumen_datos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginEnd="4dp">

                            <TextView
                                android:id="@+id/tv_stat1_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="87%"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_color" />

                            <TextView
                                android:id="@+id/tv_stat1_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asistencia"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginHorizontal="2dp">

                            <TextView
                                android:id="@+id/tv_stat2_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color" />

                            <TextView
                                android:id="@+id/tv_stat2_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Atrasos"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_stats"
                            android:padding="12dp"
                            android:layout_marginStart="4dp">

                            <TextView
                                android:id="@+id/tv_stat3_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/error_color" />

                            <TextView
                                android:id="@+id/tv_stat3_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ausencias"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de exportación -->
            <LinearLayout
                android:id="@+id/layout_botones_exportacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generar_pdf"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Generar PDF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/error_color"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_pdf"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_exportar_excel"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Exportar Excel"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/success_color"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_excel"
                    app:iconGravity="textStart" />

            </LinearLayout>

            <!-- Indicador de carga -->
            <LinearLayout
                android:id="@+id/layout_loading_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_loading_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generando reporte..."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>