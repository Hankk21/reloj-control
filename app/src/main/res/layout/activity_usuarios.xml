<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Gestión de Usuarios"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:menu="@menu/usuarios_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Barra de búsqueda -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Búsqueda y Filtros"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Campo de búsqueda -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary_color"
                        app:hintTextColor="@color/primary_color"
                        app:endIconMode="clear_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_buscar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Buscar por nombre, RUT o correo"
                            android:inputType="text"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Filtros en fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Filtro Rol -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_filtro_rol"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/primary_color"
                            app:hintTextColor="@color/primary_color">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_rol"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Filtrar por rol"
                                android:inputType="none"
                                android:text="Todos" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Filtro Estado -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_filtro_estado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            app:boxStrokeColor="@color/primary_color"
                            app:hintTextColor="@color/primary_color">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_estado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Filtrar por estado"
                                android:inputType="none"
                                android:text="Todos" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_añadir_usuario"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="2"
                    android:layout_marginEnd="8dp"
                    android:text="Añadir Usuario"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/success_color"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_person_add"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_exportar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Exportar"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_download"
                    app:iconGravity="top"
                    app:iconSize="20dp" />

            </LinearLayout>

            <!-- Lista de usuarios -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header de tabla -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:background="@color/background_color"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Nombre"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="RUT"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rol"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estado"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Acciones"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_hint"
                        android:layout_marginBottom="8dp" />

                    <!-- RecyclerView para usuarios -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_usuarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="300dp" />

                    <!-- Mensaje cuando no hay usuarios -->
                    <LinearLayout
                        android:id="@+id/layout_no_usuarios"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_people_outline"
                            android:layout_marginBottom="16dp"
                            app:tint="@color/text_hint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No se encontraron usuarios"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intenta ajustar los filtros de búsqueda"
                            android:textSize="14sp"
                            android:textColor="@color/text_hint" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Paginación -->
            <LinearLayout
                android:id="@+id/layout_paginacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pagina_anterior"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Anterior"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="6dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tv_pagina_actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Página 1 de 3"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginHorizontal="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pagina_siguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Siguiente"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="6dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>