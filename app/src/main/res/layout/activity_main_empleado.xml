<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="Mi Asistencia"
        app:titleTextColor="@color/white"
        app:menu="@menu/empleado_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="24dp"
        android:gravity="center"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 AM"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando fecha..."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirmation_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8F5E9"
        android:textColor="#2E7D32"
        android:padding="12dp"
        android:gravity="center"
        android:text="Entrada registrada correctamente"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_entrada"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Marcar\nEntrada"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textTop"
            app:iconSize="32dp"
            app:backgroundTint="@color/success_color"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_salida"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Marcar\nSalida"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_logout"
            app:iconGravity="textTop"
            app:iconSize="32dp"
            app:backgroundTint="@color/warning_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_sheet_top_rounded"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de Hoy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_historial_asistencia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_asistencia_historial"/>

        <TextView
            android:id="@+id/tv_no_historial_asistencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No hay registros hoy"
            android:textColor="@color/text_secondary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_entrada_time"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_salida_time"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_entrada_status"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_salida_status"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </LinearLayout>
</LinearLayout>