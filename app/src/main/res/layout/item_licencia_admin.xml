<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/primaryColor"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado con motivo -->
        <TextView
            android:id="@+id/tvMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo de la licencia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="8dp" />

        <!-- Informaci贸n del empleado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEmpleado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Empleado"
                android:textSize="14sp"
                android:textColor="@color/textPrimaryColor" />
        </LinearLayout>

        <!-- Fechas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desde: 2025-11-19"
                android:textSize="14sp"
                android:textColor="@color/textPrimaryColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/tvFechaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hasta: 2025-11-25"
                android:textSize="14sp"
                android:textColor="@color/textPrimaryColor" />
        </LinearLayout>

        <!-- Duraci贸n -->
        <TextView
            android:id="@+id/tvDuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duraci贸n: 7 d铆a(s)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/accentColor"
            android:layout_marginBottom="4dp" />

        <!-- Fecha de creaci贸n -->
        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitado: 2025-11-19"
            android:textSize="12sp"
            android:textColor="@color/textSecondaryColor"
            android:layout_marginBottom="8dp" />

        <!-- Indicador de documento -->
        <TextView
            android:id="@+id/tvDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Documento adjunto"
            android:textSize="12sp"
            android:textColor="@color/accentColor"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_marginVertical="8dp" />

        <!-- Botones de acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:textColor="@color/white"
                app:backgroundTint="@color/errorColor"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAprobar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprobar"
                android:textColor="@color/white"
                app:backgroundTint="@color/successColor"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
